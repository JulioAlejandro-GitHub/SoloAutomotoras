	.loginhead{
		width: 400px;
		height: 80px;
		float: right;
		margin-top: -85px;
		margin-right: 20px;
		padding-top: 1px;
		padding-left: 6px;
		background:#FFF;
		background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0.25, #fff), color-stop(0.95, #eee));
		background-image: -moz-linear-gradient( center top, #fff 25%, #eee 95% );
		-moz-border-radius:4px;
		border-radius: 4px;
		-webkit-border-radius:4px;
	}
	.loginhead H3{
		display: block;
		width: 100px;
		text-align: center;
		margin-bottom: 5px;
		margin-left: auto;
		margin-right: auto;
	}
	.lgninput{
		width: 160px;
		height: 18px;
		float: left
	}
	
	.lgninput label{
		font-size: 11px;
		font-weight: bold;
	}
	.lgninput input[type="text"],.lgninput input[type="password"]{
		font-size: 10px;
    	padding: 2px;
    	width: 90px !important;
	}
	.butt{
		width: 70px !important;
		margin-bottom: 11px;
	}
	.loginhead button{
		font-size: 12px;
		padding: 3px 5px;
	}
	.loginhead span.error{
		display: none;
		color:#fb4c1d;
		font-size: 11px;
		clear: both;
		padding: 2px;
		-moz-border-radius:3px;
		border-radius: 3px;
		-webkit-border-radius:3px;
		background: #fefbf0;
		border: 1px solid #fb4c1d;
		width: 300px;
		text-align: center;
		margin-left: auto;
		margin-right: auto;
	}